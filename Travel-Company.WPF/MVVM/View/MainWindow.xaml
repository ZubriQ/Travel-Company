    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border x:Name="BorderTitleBar"
                Grid.ColumnSpan="2"
                Background="Gray"
                CornerRadius="8,8,0,0"
                MouseDown="BorderTitleBar_MouseDown">
            <DockPanel>
                <!-- Title -->
                <TextBlock Text="Travel Company"
                           FontFamily="/Resources/Fonts/#Roboto"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           FontWeight="ExtraBold"/>
                <!-- General Buttons-->
                <DockPanel HorizontalAlignment="Right">
                    <Button x:Name="ButtonMinimize"
                            Template="{StaticResource MinimizeButton}"
                            Click="ButtonMinimize_Click" />
                    <Button x:Name="ButtonClose"
                            Template="{StaticResource CloseButton}"
                            Click="ButtonClose_Click" />
                </DockPanel>
            </DockPanel>
        </Border>
        
        <!-- Pages -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="White"
                CornerRadius="0,0,8,0">
            <ContentControl x:Name="MainContentControl"
                            Content="{Binding Path=Navigation.CurrentView}"
                            Margin="5"
                            Focusable="False" />
        </Border>

        <!-- Menu -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="White"
                CornerRadius="0,0,0,8">
            <StackPanel Width="200" 
                        VerticalAlignment="Center">
                <RadioButton x:Name="ButtonClients"
                             GroupName="MainMenu"
                             ToolTip="Clients"
                             Template="{StaticResource MainMenuRadioButton}"
                             IsChecked="True">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Path Fill="{StaticResource SuccessDarkBrush}"
                                  Data="{StaticResource GeoClients}"/>
                            <TextBlock Text="Button Text"
                                       FontSize="14"
                                       FontFamily="/Resources/Fonts/#Inter"
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
            </StackPanel>
        </Border>
    </Grid>
</Window>
