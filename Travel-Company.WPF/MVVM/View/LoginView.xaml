<UserControl x:Class="Travel_Company.WPF.MVVM.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Travel_Company.WPF.MVVM.View"
             xmlns:component="clr-namespace:Travel_Company.WPF.Resources.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20"
                VerticalAlignment="Center">
        <TextBlock Text="Login"
                   HorizontalAlignment="Center" 
                   FontSize="24"
                   FontFamily="Sans-serif"
                   FontWeight="Bold"
                   Foreground="{StaticResource Grey1Brush}"
                   Margin="30" />
        <StackPanel>
            <Grid Width="260"
                  Margin="10">
                <component:Input ComponentName="Username"
                                 Text="{Binding Username, Mode=TwoWay}" />
            </Grid>
            <Grid Width="260" 
                  Margin="10">
                <component:Password PasswordText="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
            <Grid Width="260"
                  Margin="10,10,10,50">
                <Button x:Name="ButtonLogIn"
                        Template="{StaticResource ButtonLogIn}"
                        Command="{Binding Path=NavigateToEmployeesCommand}"
                        Content="Enter" />
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
